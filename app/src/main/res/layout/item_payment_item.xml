<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/cl_payment_item"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<ImageView
		android:id="@+id/im_payment_item_type"
		android:layout_width="@dimen/payment_image_width"
		android:layout_height="@dimen/payment_image_height"
		android:layout_marginStart="@dimen/spacing_normal"
		android:layout_marginTop="@dimen/spacing_normal"
		android:adjustViewBounds="true"
		android:src="@drawable/ic_payment_visa"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />
	
	<TextView
		android:id="@+id/tv_payment_item_content"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/spacing_large"
		android:text="Content"
		android:textColor="@color/brownish_grey"
		android:textSize="@dimen/font_small"
		app:layout_constraintBottom_toBottomOf="@id/im_payment_item_type"
		app:layout_constraintStart_toEndOf="@id/im_payment_item_type"
		app:layout_constraintTop_toTopOf="@id/im_payment_item_type" />
	
	<RadioButton
		android:id="@+id/rb_payment_item"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginEnd="@dimen/spacing_large"
		android:buttonTint="@color/greenish_teal"
		android:checked="false"
		android:gravity="end"
		app:layout_constraintBottom_toBottomOf="@+id/im_payment_item_type"
		app:layout_constraintDimensionRatio="1:1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="@id/im_payment_item_type" />
	
	<FrameLayout
		android:id="@+id/frameLayout"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/spacing_normal"
		app:layout_constraintBottom_toBottomOf="@id/horizontal_line"
		app:layout_constraintEnd_toEndOf="@+id/rb_payment_item"
		app:layout_constraintStart_toStartOf="@+id/im_payment_item_type"
		app:layout_constraintTop_toBottomOf="@+id/rb_payment_item">
		
		<androidx.constraintlayout.widget.ConstraintLayout
			android:id="@+id/cl_payment_item_pay"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:visibility="gone"
			tools:visibility="visible">
			
			<EditText
				android:id="@+id/btn_payment_item_cvv"
				android:layout_width="0dp"
				android:layout_height="30dp"
				android:layout_marginEnd="@dimen/spacing_tiny"
				android:background="@drawable/round_border_button_grey"
				android:fontFamily="@font/opensans_bold"
				android:gravity="center"
				android:hint="CVV"
				android:inputType="number"
				android:maxLength="3"
				android:paddingLeft="@dimen/spacing_normal"
				android:paddingRight="@dimen/spacing_normal"
				android:textSize="@dimen/font_extra_small"
				android:visibility="gone"
				app:layout_constraintEnd_toStartOf="@+id/btn_payment_item_pay"
				
				app:layout_constraintTop_toTopOf="parent"
				tools:visibility="visible" />
			
			<Button
				android:id="@+id/btn_payment_item_pay"
				style="@style/GreenPayTextStyle"
				android:layout_width="@dimen/payment_button_pay_width"
				android:layout_height="@dimen/payment_button_pay_height"
				android:layout_marginEnd="@dimen/spacing_tiny"
				android:layout_marginBottom="@dimen/spacing_small"
				android:text="Pay Now"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent" />
		
		
		</androidx.constraintlayout.widget.ConstraintLayout>
	</FrameLayout>
	
	<View
		android:id="@+id/horizontal_line"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_gravity="center_horizontal"
		android:layout_marginStart="16dp"
		android:layout_marginEnd="26dp"
		android:background="@color/white_two"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/frameLayout" />


</androidx.constraintlayout.widget.ConstraintLayout>